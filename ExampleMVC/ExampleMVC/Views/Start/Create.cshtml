@{
}

<h3>Creation!</h3>
<hr />

<div class="row">
    <div class"col-6">

        <div class="card-header">
            <h5>Create a new Doggo</h5>
        </div>

        <div class="card-body">
            <form asp-controller="Start" asp-action="CreateDog" method="post">

                <div class="mb-3">
                    <label class="form-label">Dog Name</label>
                    <input asp-for=name type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Dog Age</label>
                    <input asp-for=age type="number" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>

        <div class="card-footer">
        </div>

    </div>
</div>